<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_play_back"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/icon_back_white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:singleLine="true"
                android:id="@+id/tv_play_song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="歌曲名"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                 android:singleLine="true"
                android:id="@+id/tv_play_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是歌手"
                android:textColor="#aaa"
                android:textSize="12sp" />
        </LinearLayout>


        <ImageView
            android:clickable="true"
            android:id="@+id/iv_play_favor"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bubble_favour" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:background="@drawable/funk" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" >

        <TextView
            android:id="@+id/tv_player_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="0:00"
            android:textColor="#aaa"
            android:textSize="15sp" />

        <SeekBar
            android:id="@+id/sb_player"
            style="@style/Widget.SeekBar.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_player_all_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="3:40"
            android:textColor="#aaa"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >

        <ImageView
            android:id="@+id/iv_player_mode"
            android:layout_width="32dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_shuffle"
            android:clickable="true" />

        <ImageView
            android:id="@+id/iv_player_pre"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/iv_player_mode"
            android:background="@drawable/player_pre"
            android:clickable="true" />

        <RelativeLayout
            android:id="@+id/rl_home_play"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/backgroud_play2"
            android:clickable="true" >

            <ImageView
                android:id="@+id/iv_home_play"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/player_play" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_player_next"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/rl_home_play"
            android:background="@drawable/player_next"
            android:clickable="true" />

        <ImageView
            android:id="@+id/iv_player_share"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/player_share_p"
            android:clickable="true" />
    </RelativeLayout>

</LinearLayout>