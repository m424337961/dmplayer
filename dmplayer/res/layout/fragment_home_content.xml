<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/fl_home_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <LinearLayout
        android:id="@+id/lv_home_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#434343"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_music_song_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp "
            android:layout_marginTop="8dp"
            android:background="@drawable/default_house_head" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/iv_music_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是歌曲名"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/iv_home_song_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是歌手"
                android:textColor="#ccc"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_home_play"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:background="@drawable/backgroud_play2"
            android:clickable="true" >

            <ImageView
                android:id="@+id/iv_home_play"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/player_play" />
        </RelativeLayout>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/player_next" />
    </LinearLayout>

</LinearLayout>